{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@onflow/frw-api": ["./packages/api/src"],
      "@onflow/frw-cadence": ["./packages/cadence/src"],
      "@onflow/frw-context": ["./packages/context/src"],
      "@onflow/frw-icons": ["./packages/icons/src"],
      "@onflow/frw-screens": ["./packages/screens/src"],
      "@onflow/frw-services": ["./packages/services/src"],
      "@onflow/frw-stores": ["./packages/stores/src"],
      "@onflow/frw-types": ["./packages/types/src"],
      "@onflow/frw-ui": ["./packages/ui/src"],
      "@onflow/frw-utils": ["./packages/utils/src"],
      "@onflow/frw-workflow": ["./packages/workflow/src"]
    }
  },
  "include": ["packages/*/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/tests/**",
    "**/*.test.*",
    "**/stories/**",
    "**/*.stories.*",
    "**/.storybook/**"
  ]
}
