# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 2 space indentation for most files
[*.{js,jsx,ts,tsx,json,yml,yaml,md,html,css,scss}]
indent_style = space
indent_size = 2

# 4 space indentation for Python
[*.py]
indent_style = space
indent_size = 4

# Tab indentation for Makefiles
[Makefile]
indent_style = tab

# No trailing whitespace in markdown files
[*.md]
trim_trailing_whitespace = false

# Specific rules for package.json files
[package.json]
indent_style = space
indent_size = 2

# Swift and Objective-C files (iOS)
[*.{swift,m,h}]
indent_style = space
indent_size = 4

# Java files (Android)
[*.{java,kt}]
indent_style = space
indent_size = 4

# Gradle files
[*.{gradle,gradle.kts}]
indent_style = space
indent_size = 4

# XML files
[*.xml]
indent_style = space
indent_size = 2