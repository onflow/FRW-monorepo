{
  "name": "@onflow/frw-workflow",
  "version": "0.0.4",
  "description": "Package for flow wallet workflow",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm build",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix"
  },
  "exports": {
    ".": {
      "@onflow/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.28.2",
    "@ethersproject/abi": "^5.8.0",
    "@ethersproject/units": "^5.8.0",
    "@onflow/fcl": "^1.13.1",
    "@onflow/frw-cadence": "workspace:*",
    "@onflow/frw-context": "workspace:*",
    "@onflow/frw-utils": "workspace:*",
    "@onflow/transport-http": "^1.13.0",
    "@onflow/util-encode-key": "^1.2.4",
    "elliptic": "^6.5.7",
    "sha3": "^2.1.4"
  },
  "devDependencies": {
    "dotenv": "^16.4.5",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4"
  }
}
