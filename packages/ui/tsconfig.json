{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "include": ["src/**/*", "stories/UpdateDialog.stories.tsx"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*",
    "storybook-static",
    ".storybook",
    "stories",
    "*.stories.tsx"
  ]
}
