{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "types": ["node"],
    "rootDir": "./src",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": false,
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "scripts/**/*",
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "__tests__/**/*",
    "tests/**/*"
  ]
}
