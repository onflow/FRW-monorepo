{
  "name": "@onflow/frw-ui",
  "version": "0.0.1",
  "description": "Shared UI components for Flow Reference Wallet",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm build",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix"
  },
  "exports": {
    ".": {
      "@onflow/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "@onflow/frw-stores": "workspace:*",
    "@onflow/frw-services": "workspace:*",
    "@onflow/frw-types": "workspace:*",
    "tamagui": "^1.112.0",
    "react": "^19.1.0",
    "react-i18next": "^15.3.3"
  },
  "devDependencies": {
    "@types/react": "^19.1.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  }
}
