{
  "name": "@onflow/frw-screens",
  "version": "1.0.0",
  "description": "Screen components and logic for Flow Wallet",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "test": "vitest --run --passWithNoTests",
    "translate": "node scripts/translate-i18n.js",
    "translate:dry": "node scripts/translate-i18n.js --dry-run",
    "translate:force": "node scripts/translate-i18n.js --force"
  },
  "dependencies": {
    "@onflow/frw-cadence": "workspace:*",
    "@onflow/frw-icons": "workspace:*",
    "@onflow/frw-services": "workspace:*",
    "@onflow/frw-stores": "workspace:*",
    "@onflow/frw-types": "workspace:*",
    "@onflow/frw-ui": "workspace:*",
    "@onflow/frw-utils": "workspace:*",
    "i18next": "^24.1.0",
    "react": "^19.1.0",
    "react-i18next": "^15.6.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@types/react": "^19.1.0",
    "eslint": "^9.31.0",
    "jsdom": "^26.1.0",
    "rimraf": "^5.0.1",
    "tsup": "^8.0.0",
    "typescript": "^5.0.4",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  }
}
