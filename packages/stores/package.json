{
    "name": "@onflow/frw-stores",
    "version": "0.0.4",
    "description": "Package for flow wallet stores",
    "type": "module",
    "main": "./src/index.ts",
    "types": "./src/index.ts",
    "files": [
        "src",
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "build:watch": "tsup --watch",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist",
        "test": "vitest",
        "test:run": "vitest --run",
        "test:coverage": "vitest --coverage",
        "prepublishOnly": "pnpm build",
        "lint": "eslint . --cache",
        "lint:fix": "eslint . --cache --fix"
    },
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "default": "./src/index.ts"
        },
        "./*": {
            "types": "./src/*.ts",
            "default": "./src/*.ts"
        }
    },
    "dependencies": {
        "@onflow/frw-api": "0.0.3",
        "@onflow/frw-types": "0.0.3",
        "@onflow/frw-workflow": "0.0.4",
        "zustand": "^5.0.6"
    }
}
