{
  "name": "@onflow/frw-wallet",
  "version": "0.0.1",
  "description": "TypeScript wallet package for private key-based multi-account management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm build",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix"
  },
  "exports": {
    ".": {
      "@onflow/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "react-native": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./crypto/wallet-core-provider": {
      "types": "./dist/crypto/wallet-core-provider.d.ts",
      "react-native": "./dist/crypto/wallet-core-provider.native.js",
      "import": "./dist/crypto/wallet-core-provider.js",
      "default": "./dist/crypto/wallet-core-provider.js"
    }
  },
  "react-native": {
    "@onflow/frw-wallet/dist/crypto/wallet-core-provider": "./dist/crypto/wallet-core-provider.native.js",
    "@onflow/frw-wallet/dist/crypto/wallet-core-provider.js": "./dist/crypto/wallet-core-provider.native.js",
    "./dist/crypto/wallet-core-provider": "./dist/crypto/wallet-core-provider.native",
    "./dist/crypto/wallet-core-provider.js": "./dist/crypto/wallet-core-provider.native.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.2",
    "@noble/curves": "^1.7.0",
    "@noble/hashes": "^1.6.1",
    "@onflow/fcl": "^1.12.4",
    "@onflow/frw-cadence": "workspace:*",
    "@scure/bip32": "^1.6.0",
    "@scure/bip39": "^1.6.0",
    "@trustwallet/wallet-core": "^4.0.50",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.14.15",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4"
  }
}
