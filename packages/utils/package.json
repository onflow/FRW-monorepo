{
  "name": "@onflow/frw-utils",
  "version": "1.0.0",
  "description": "Utility functions for Flow Reference Wallet",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@onflow/frw-types": "workspace:*",
    "@babel/runtime": "^7.26.0"
  },
  "devDependencies": {
    "@types/node": "^22.11.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {},
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "@onflow/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
