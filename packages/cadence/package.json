{
  "name": "@onflow/frw-cadence",
  "version": "0.0.3",
  "description": "Package for flow wallet cadence scripts",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm build",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "codegen": "npx cadence-codegen typescript ./src/cadence ./src/cadence.generated.ts",
    "postinstall": "pnpm codegen"
  },
  "exports": {
    ".": {
      "@onflow/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.2",
    "@onflow/fcl": "^1.20.3",
    "@onflow/frw-utils": "workspace:*",
    "@onflow/transport-http": "^1.14.0",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.11.0",
    "@vitest/coverage-v8": "3.2.4",
    "@outblock/cadence-codegen": "^0.0.9",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/onflow/FRW-core.git",
    "directory": "packages/cadence"
  },
  "license": "LGPL-3.0-or-later"
}
